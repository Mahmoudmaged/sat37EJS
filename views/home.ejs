<%- include('./shared/header')%>

    <section class="post container my-5">
        <div class="postForm w-75 m-auto">
            <form method="POST" action="/post" enctype="multipart/form-data">
                <h2 class="text-center my-2">Create New Post</h2>
                <div class="form-group my-2">
                    <input class="form-control" type="text" name="title" placeholder="Title" value="" />
                </div>

                <div class="form-group my-2">
                    <input class="form-control" type="text" name="desc" placeholder="Description" value="" />
                </div>

                <div class="form-group my-2">
                    <input class="form-control" type="file" name="image" value="" />
                </div>
                <div class="form-group my-2">
                    <button type="submit" class="btn btn-info w-100">Add Post</button>
                </div>
            </form>
        </div>
    </section>

    <section class="container mb-2 text-center">
        <div class="row d-flex justify-content-center align-items-center">
            <% for( let i=0; i < postList.length; i++ ) { %>
                <div class="col-md-4 my-2 text-center">
                    <div class="content p-3">
                        <div class="card m-auto" style="width: 18rem;">
                            <img src="http://localhost:3000/<%=postList[i].imageURL%>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><%=postList[i].title%></h5>
                                <p class="card-text"><%=postList[i].desc%></p>
                                <a href="/post/<%=postList[i]._id%>" class="btn btn-primary">update</a>
                                <br>
                                <a href="/post/delete/<%=postList[i]._id%>" class="btn btn-danger my-2">Delete</a>

                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </section>
    <%- include('./shared/footer')%>