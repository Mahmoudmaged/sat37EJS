<%- include('./shared/header')%>

    <section class="post container my-5">
        <div class="postForm w-75 m-auto">
            <form method="POST" action="/post/<%= post._id %>" enctype="multipart/form-data">
                <h2 class="text-center my-2">Create New Post</h2>
                <div class="form-group my-2">
                    <input class="form-control" type="text" name="title" placeholder="Title" value="<%= post.title %>" />
                </div>

                <div class="form-group my-2">
                    <input class="form-control" type="text" name="desc" placeholder="Description" value="<%= post.desc %>" />
                </div>

                <div class="form-group my-2">
                    <input class="form-control" type="file" name="image" value="" />
                </div>
                <div class="form-group my-2">
                    <button type="submit" class="btn btn-info w-100">Add Post</button>
                </div>
            </form>
        </div>
    </section>


    <%- include('./shared/footer')%>