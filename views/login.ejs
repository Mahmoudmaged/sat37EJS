<%- include('./shared/header')%>


    <section class="container my-5">
        <div class="signupForm w-75 m-auto">
            <form action="/login" method="POST">
                <% if (userExist==true) { %>
                    <div class="alert alert-danger my-2">
                        In-valid account email
                    </div>
                    <% } %>
                        <% if (wrongPassword==true) { %>
                            <div class="alert alert-danger my-2">
                                email and password misMatch
                            </div>
                            <% } %>


                                <% if (catchErr==true) { %>
                                    <div class="alert alert-danger my-2">
                                        Server error
                                    </div>
                                    <% } %>


                                        <div class="form-group my-2">
                                            <input class="form-control" type="email" value="<%= oldInputs?.email  %>"
                                                placeholder="Email" name="email" />
                                        </div>
                                        <% if (validationErr?.includes('email')) { %>
                                            <div class="alert alert-danger my-2">
                                                in-valid email
                                            </div>
                                            <% } %>
                                                <div class="form-group my-2">
                                                    <input class="form-control" type="password"
                                                        value="<%= oldInputs?.password  %>" placeholder="Password"
                                                        name="password" />
                                                </div>
                                                <% if (validationErr?.includes('password')) { %>
                                                    <div class="alert alert-danger my-2">
                                                        in-valid password
                                                    </div>
                                                    <% } %>

                                                        <div class="form-group my-2">
                                                            <button class="btn btn-info w-100"
                                                                type="submit">signIn</button>
                                                            <br>
                                                            <div class="text-center">
                                                                <p>Don't Have Account ?<a href="/">Signup
                                                                        Now</a></p>

                                                            </div>
                                                        </div>
            </form>

        </div>
    </section>
    <%- include('./shared/footer')%>